<Window x:Class="_5LAB.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1 — Приоритет свойств"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="250">

    <Window.Resources>
        <Style x:Key="BlueButton" TargetType="Button">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Style="{StaticResource BlueButton}" Content="Цвет задан в стиле"/>
        <Button Style="{StaticResource BlueButton}" Background="LightGreen"
                Content="Атрибут перекрыл стиль"/>
        <Button Content="Назад" Width="100" Margin="10" Click="Back_Click"/>
    </StackPanel>
</Window>
