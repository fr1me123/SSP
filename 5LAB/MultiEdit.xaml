<Window x:Class="_5LAB.MultiEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultiEdit — Лабораторная №5"
        WindowStartupLocation="CenterScreen"
        Width="900" Height="500">

    <Window.Resources>
        <LinearGradientBrush x:Key="PanelGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#dceeff" Offset="0"/>
            <GradientStop Color="#9acbff" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="BigTextStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#3366cc"/>
        </Style>

        <Style x:Key="SmallTextStyle" TargetType="TextBox"
               BasedOn="{StaticResource BigTextStyle}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#f8f8f8"/>
            <Setter Property="BorderBrush" Value="#999"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Background" Value="#2196f3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#1976d2"/>
            <EventSetter Event="Click" Handler="Button_Click"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть -->
        <Border Grid.Column="0" Margin="10" CornerRadius="8" BorderThickness="1"
                BorderBrush="#999" Background="{StaticResource PanelGradient}">
            <StackPanel Margin="10">
                <TextBox x:Name="LeftBig" Style="{StaticResource BigTextStyle}" GotFocus="BigText_GotFocus"/>
                <TextBox x:Name="LeftSmall1" Style="{StaticResource SmallTextStyle}" GotFocus="SmallText_GotFocus"/>
                <TextBox x:Name="LeftSmall2" Style="{StaticResource SmallTextStyle}" GotFocus="SmallText_GotFocus"/>
                <Button Content="Очистить левую часть" Tag="Left"/>
            </StackPanel>
        </Border>

        <!-- Правая часть -->
        <Border Grid.Column="1" Margin="10" CornerRadius="8" BorderThickness="1"
                BorderBrush="#999" Background="{StaticResource PanelGradient}">
            <StackPanel Margin="10">
                <TextBox x:Name="RightBig" Style="{StaticResource BigTextStyle}" GotFocus="BigText_GotFocus"/>
                <TextBox x:Name="RightSmall1" Style="{StaticResource SmallTextStyle}" GotFocus="SmallText_GotFocus"/>
                <TextBox x:Name="RightSmall2" Style="{StaticResource SmallTextStyle}" GotFocus="SmallText_GotFocus"/>
                <Button Content="Очистить правую часть" Tag="Right"/>
            </StackPanel>
        </Border>

        <Button Content="Назад"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,10" Width="100" Height="30" Click="Back_Click"/>
    </Grid>
</Window>
