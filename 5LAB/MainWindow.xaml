<Window x:Class="_5LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная №5 — Использование стилей"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f0f0f0">
        <Border CornerRadius="10" BorderBrush="DarkGray" BorderThickness="1" Padding="25" Margin="30" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Лабораторная работа №5"
                           FontSize="22" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="«Использование стилей в WPF»"
                           FontSize="16" TextAlignment="Center" Margin="0,0,0,20"/>

                <Button Content="Задание 1 — Приоритет свойств"
                        Margin="5" Padding="8,4"
                        FontSize="14"
                        Width="320"
                        Click="OpenTask1_Click"/>
                <Button Content="Задание 2 — Общие стили элементов"
                        Margin="5" Padding="8,4"
                        FontSize="14"
                        Width="320"
                        Click="OpenTask2_Click"/>
                <Button Content="Задание 3 — MultiEdit (финальное задание)"
                        Margin="5" Padding="8,4"
                        FontSize="14"
                        Width="320"
                        Click="OpenTask3_Click"/>

                <Separator Margin="0,15"/>

                <Button Content="Выход"
                        Margin="5" Padding="6,3"
                        FontSize="13"
                        Width="120"
                        HorizontalAlignment="Center"
                        Click="Exit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
