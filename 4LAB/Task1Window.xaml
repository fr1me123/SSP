<Window x:Class="_4LAB.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Задание 1: Проверьте реакцию среды на неверные параметры Binding"
                   FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>
        <Slider Minimum="8" Maximum="30" x:Name="slider1"/>
        <TextBlock FontSize="{Binding ElementName=wrongName, Path=WrongValue}" 
                   Text="Ошибка привязки — смотрите окно вывода" 
                   Margin="0,10,0,0"/>

        <Button Content="Назад" HorizontalAlignment="Right" Margin="0,20,0,0" Click="Back_Click"/>
    </StackPanel>
</Window>