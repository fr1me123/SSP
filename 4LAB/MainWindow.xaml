<Window x:Class="_4LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная №4 — Привязка данных"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">


    <Grid Background="#f0f0f0">
        <Border CornerRadius="8" BorderBrush="DarkGray" BorderThickness="1" Padding="20" Margin="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Лабораторная работа №4"
                           FontSize="22" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="«Привязка данных в WPF»"
                           FontSize="16" TextAlignment="Center" Margin="0,0,0,20"/>

                <Button Content="Задание 1 — Проверка неправильных Binding" Margin="5" Click="OpenTask1_Click"/>
                <Button Content="Задание 2 — Привязка TextBox и Slider" Margin="5" Click="OpenTask2_Click"/>
                <Button Content="Задание 3 — Синхронизация Slider, TextBox и FontSize" Margin="5" Click="OpenTask3_Click"/>
                <Button Content="Задание 4 — Привязка InkCanvas (графический редактор)" Margin="5" Click="OpenTask4_Click"/>

                <Button Content="Выход" Margin="20,15,20,10" Click="Exit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>