<Window x:Class="_4LAB.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 2" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Задание 2: Привязка TextBox и Slider" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBox x:Name="t1" Margin="0,5"/>
        <TextBox x:Name="t2" Text="{Binding ElementName=t1, Path=Text, Mode=TwoWay}" Margin="0,5"/>

        <Slider x:Name="slider1" Minimum="0" Maximum="100" Margin="0,10"/>
        <Slider x:Name="slider2" Value="{Binding ElementName=slider1, Path=Value, Mode=TwoWay}" Minimum="0" Maximum="100" Margin="0,5"/>

        <Button Content="Назад" HorizontalAlignment="Right" Margin="0,20,0,0" Click="Back_Click"/>
    </StackPanel>
</Window>
