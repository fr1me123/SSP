<Window x:Class="_4LAB.Task3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 3" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Задание 3: Синхронизация размера шрифта" FontWeight="Bold" Margin="0,0,0,10"/>

        <Slider x:Name="sliderFont" Minimum="8" Maximum="48" Value="20" Margin="0,5"/>
        <TextBox x:Name="textSize" Text="{Binding ElementName=sliderFont, Path=Value, Mode=TwoWay}" Margin="0,5" Width="100"/>

        <TextBlock Text="Пример текста" 
                   FontSize="{Binding ElementName=sliderFont, Path=Value}" 
                   Margin="0,15,0,0"/>

        <Button Content="Назад" HorizontalAlignment="Right" Margin="0,20,0,0" Click="Back_Click"/>
    </StackPanel>
</Window>
