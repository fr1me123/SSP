<Window x:Class="_2LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2LAB"
        mc:Ignorable="d"
        Title="Диспетчер компоновки" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="1.txt" Margin="5"/>
            <TextBlock Text="2.txt" Margin="5"/>
            <TextBlock Text="3.txt" Margin="5"/>
            <TextBlock Text="4.txt" Margin="5"/>
            <TextBlock Text="5.txt" Margin="5"/>
            <TextBlock Text="6.txt" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,-2,0,12" Grid.Column="1">
            <Button Content="Открыть" Width="70" Margin="5" Click="Button_Click"/>
            <Button Content="Сохранить" Width="70" Margin="5"/>
            <Button Content="Закрыть" Width="70" Margin="5"/>
            <Button Content="Обработать" Width="80" Margin="5"/>
            <Button Content="О программе" Width="90" Margin="5"/>
        </StackPanel>

        <TabControl Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <TabItem Header="1.txt"/>
            <TabItem Header="2.txt"/>
            <TabItem Header="3.txt"/>
        </TabControl>

        <WrapPanel Grid.Row="1" Grid.Column="1" 
           Orientation="Horizontal" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="10,30,0,0">

            <Border Width="50" Height="50" Background="Yellow" Margin="5">
                <TextBlock Text="A" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Width="50" Height="50" Background="Red" Margin="5">
                <TextBlock Text="B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Width="50" Height="50" Background="Green" Margin="5">
                <TextBlock Text="C" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Width="50" Height="50" Background="Blue" Margin="5">
                <TextBlock Text="D" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Width="50" Height="50" Background="Gray" Margin="5">
                <TextBlock Text="E" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Width="50" Height="50" Background="LightYellow" Margin="5">
                <TextBlock Text="F" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </WrapPanel>

        <Label Content="Последние документы" HorizontalAlignment="Left" Margin="-3,4,0,0" VerticalAlignment="Top" FontSize="8" Height="24" Width="93"/>
    </Grid>
</Window>
