@model lab1112.Models.Author

@{
    ViewBag.Title = "Удалить автора";
}

<h2>Удалить автора</h2>

<h3>Вы уверены, что хотите удалить этого автора?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Фамилия:</dt>
        <dd>@Html.DisplayFor(model => model.LastName)</dd>

        <dt>Имя:</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>

        <dt>Отчество:</dt>
        <dd>@Html.DisplayFor(model => model.MiddleName)</dd>

        <dt>Полное имя:</dt>
        <dd>@Model.FullName</dd>

        <dt>Дата рождения:</dt>
        <dd>
            @if (Model.BirthDate.HasValue)
            {
                @Model.BirthDate.Value.ToString("dd.MM.yyyy")
            }
        </dd>

        <dt>Страна:</dt>
        <dd>@Html.DisplayFor(model => model.Country)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-danger" />
            @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>