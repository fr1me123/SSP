@model IEnumerable<lab1112.Models.Author>

@{
    ViewBag.Title = "Список авторов";
}

<h2>Список авторов</h2>

<p>
    @Html.ActionLink("Добавить нового автора", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Дата рождения</th>
        <th>Страна</th>
        <th>Полное имя</th>
        <th>Действия</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
            <td>
                @if (item.BirthDate.HasValue)
                {
                    @item.BirthDate.Value.ToString("dd.MM.yyyy")
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.Country)</td>
            <td>@item.FullName</td>
            <td>
                <div class="btn-group" role="group">
                    @Html.ActionLink("Подробности", "Details", new { id = item.AuthorId }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.AuthorId }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.AuthorId }, new { @class = "btn btn-danger btn-sm" })
                </div>
            </td>
        </tr>
    }
</table>