@model lab1112.Models.Book

@{
    ViewBag.Title = "Детали книги";
}

<h2>Детали книги</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Название книги:</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>Автор:</dt>
        <dd>@Html.DisplayFor(model => model.Author.FullName)</dd>

        <dt>Год издания:</dt>
        <dd>@Html.DisplayFor(model => model.PublicationYear)</dd>

        <dt>Адрес издательства:</dt>
        <dd>@Html.DisplayFor(model => model.PublisherAddress)</dd>

        <dt>Цена:</dt>
        <dd>@Html.DisplayFor(model => model.Price)</dd>

        <dt>Книготорговая фирма:</dt>
        <dd>@Html.DisplayFor(model => model.BookStore)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "btn btn-secondary" })
</p>
