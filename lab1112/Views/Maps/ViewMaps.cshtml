            'Brest': 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d78449.31346339424!2d23.632848329964006!3d52.088084177221866!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47210c0223630975%3A0x4d319ea41ff64ae9!2z0JHRgNC10YHRgg!5e0!3m2!1sru!2sby!4v1576008086154!5m2!1sru!2sby',

            'Vitebsk': 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d150517.9088211986!2d30.218223075309055!3d53.88123104449437!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46d0521c52844571%3A0xcf85d14239bb73b6!2z0JzQvtCz0LjQu9GR0LI!5e0!3m2!1sru!2sby!4v1576007883514!5m2!1sru!2sby',

            'Grodno': 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d150517.9088211986!2d23.818223075309055!3d53.68123104449437!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46d0521c52844571%3A0xcf85d14239bb73b6!2z0JPQvtGA0L7QtNC90L4!5e0!3m2!1sru!2sby!4v1576007883515!5m2!1sru!2sby',

