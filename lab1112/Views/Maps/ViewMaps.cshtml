
@{
    ViewBag.Title = "Карты городов Беларуси";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Карты городов Беларуси</h2>

<div class="form-group">
    <label for="citySelect">Выберите город:</label>
    <select id="citySelect" class="form-control" onchange="changeMap(this.value)" style="width: 300px;">
        <option value="">-- Выберите город --</option>
        <option value="Minsk">Минск</option>
        <option value="Brest">Брест</option>
        <option value="Vitebsk">Витебск</option>
        <option value="Grodno">Гродно</option>
        <option value="Gomel">Гомель</option>
        <option value="Mogilev">Могилёв</option>
    </select>
</div>

<br />

<div id="mapContainer">
    <iframe id="cityMap"
            width="100%"
            height="500"
            frameborder="0"
            style="border: 0; border-radius: 8px;"
            allowfullscreen="">
    </iframe>
</div>

