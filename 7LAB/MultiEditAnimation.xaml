<Window x:Class="_7LAB.MultiEditAnimation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MultiEdit с анимацией" 
        WindowStartupLocation="CenterScreen"
        Width="900" Height="500" Background="#34495E">

    <Window.Resources>
        <LinearGradientBrush x:Key="PanelGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#dceeff" Offset="0"/>
            <GradientStop Color="#9acbff" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="SimpleAnimatedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Background" Value="#2196f3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#1976d2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976d2"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0d47a1"/>
                    <Setter Property="Foreground" Value="#eeeeee"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть с анимацией появления -->
        <Border Grid.Column="0" Margin="10" CornerRadius="8" BorderThickness="1"
                BorderBrush="#999" Background="{StaticResource PanelGradient}">
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="0" To="1" Duration="0:0:0.5" 
                                           Storyboard.TargetProperty="Opacity"/>
                            <ThicknessAnimation From="50,10,10,10" To="10,10,10,10" Duration="0:0:0.5" 
                                              Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <StackPanel Margin="10">
                <TextBox x:Name="LeftTextBox" Height="120" Margin="8" TextWrapping="Wrap" 
                        Background="#FFA9CDF1" BorderBrush="#3366cc" FontSize="14">
                    <TextBox.Triggers>
                        <EventTrigger RoutedEvent="GotFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#e3f2fd" Duration="0:0:0.3" 
                                                  Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"/>
                                    <ThicknessAnimation To="2" Duration="0:0:0.2" 
                                                      Storyboard.TargetProperty="BorderThickness"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="LostFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="White" Duration="0:0:0.3" 
                                                  Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"/>
                                    <ThicknessAnimation To="1" Duration="0:0:0.2" 
                                                      Storyboard.TargetProperty="BorderThickness"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBox.Triggers>
                </TextBox>
                <Button Content="Очистить левую часть" Style="{StaticResource SimpleAnimatedButtonStyle}"
                        Click="ClearLeft_Click"/>
            </StackPanel>
        </Border>

        <!-- Правая часть с анимацией появления -->
        <Border Grid.Column="1" Margin="10" CornerRadius="8" BorderThickness="1"
                BorderBrush="#999" Background="{StaticResource PanelGradient}">
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="0" To="1" Duration="0:0:0.5" 
                                           Storyboard.TargetProperty="Opacity"/>
                            <ThicknessAnimation From="50,10,10,10" To="10,10,10,10" Duration="0:0:0.5" 
                                              Storyboard.TargetProperty="Margin"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <StackPanel Margin="10">
                <TextBox x:Name="RightTextBox" Height="120" Margin="8" TextWrapping="Wrap" 
                        Background="#FFA9CDF1" BorderBrush="#3366cc" FontSize="14">
                    <TextBox.Triggers>
                        <EventTrigger RoutedEvent="GotFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#e3f2fd" Duration="0:0:0.3" 
                                                  Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"/>
                                    <ThicknessAnimation To="2" Duration="0:0:0.2" 
                                                      Storyboard.TargetProperty="BorderThickness"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="LostFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="White" Duration="0:0:0.3" 
                                                  Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"/>
                                    <ThicknessAnimation To="1" Duration="0:0:0.2" 
                                                      Storyboard.TargetProperty="BorderThickness"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBox.Triggers>
                </TextBox>
                <Button Content="Очистить правую часть" Style="{StaticResource SimpleAnimatedButtonStyle}"
                        Click="ClearRight_Click"/>
            </StackPanel>
        </Border>

        <!-- Кнопка назад -->
        <Button Content="Назад" Style="{StaticResource SimpleAnimatedButtonStyle}"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Margin="0,0,0,20" Width="100" Height="35" Click="Back_Click"/>
    </Grid>
</Window>