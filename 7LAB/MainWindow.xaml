<Window x:Class="_7LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа №7 - Анимация" 
        WindowStartupLocation="CenterScreen"
        Width="800" Height="600">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2196f3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1976d2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976d2"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0d47a1"/>
                    <Setter Property="Foreground" Value="#eeeeee"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#34495E">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Лабораторная работа №7" 
                      FontSize="24" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,30"
                      Foreground="White"/>

            <Button Content="MultiEdit с анимацией" 
                    Click="MultiEditAnimation_Click"
                    Width="200"/>

            <Button Content="Убегающая кнопка" 
                    Click="RunningButton_Click"
                    Width="200"/>

            <Button Content="Пульсар" 
                    Click="Pulsar_Click"
                    Width="200"/>

            <Button Content="Выход" 
                    Click="Exit_Click"
                    Width="200" Background="#f44336" BorderBrush="#d32f2f"
                    Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>