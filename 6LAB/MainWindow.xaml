<Window x:Class="_6LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа №6 - Триггеры в WPF" 
        Height="450" Width="650"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="#1565C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="3" BlurRadius="8" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#34495E">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Лабораторная работа №6" 
                      FontSize="26" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,25"
                      Foreground="White"
                      FontFamily="Segoe UI"/>

            <TextBlock Text="Триггеры в WPF-приложениях" 
                      FontSize="19" FontStyle="Italic"
                      HorizontalAlignment="Center" Margin="0,0,0,45"
                      Foreground="#FFD6D6D6"
                      FontFamily="Segoe UI"/>

            <Button Content="Задание 1: Приоритет триггеров" 
                    Click="NavigateToTask1" 
                    Width="320"
                    Background="#27AE60"/>

            <Button Content="Задание 2: Текстовый редактор" 
                    Click="NavigateToTask2" 
                    Width="320"
                    Background="#8E44AD"/>

            <Button Content="Выход" 
                    Click="ExitApplication" 
                    Width="160" 
                    Background="White" 
                    Margin="0,25,0,0" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>