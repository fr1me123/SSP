<Window x:Class="_6LAB.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1: Приоритет триггеров" 
        Height="550" Width="750"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="DemoButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>

            <Style.Triggers>
                <!-- Триггер 1: При наведении мыши -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27AE60"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="4" BlurRadius="12" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Триггер 2: При нажатии -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                    <Setter Property="Foreground" Value="#F1C40F"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.92" ScaleY="0.92"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <!-- Триггер 3: Когда кнопка отключена -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Foreground" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#FF99B7D4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <TextBlock Text="Приоритет триггеров" 
                      FontSize="22" FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Foreground="White"
                      FontFamily="Segoe UI"/>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25">
                <TextBlock Text="Демонстрация приоритета триггеров:" 
                          FontSize="17" FontWeight="SemiBold" 
                          Margin="0,0,0,12"
                          Foreground="Black"/>

                <TextBlock Text="Кнопка имеет несколько триггеров:" 
                          Margin="0,0,0,8"
                          Foreground="Black"/>
                <TextBlock Text="1. IsMouseOver - меняет цвет и жирность шрифта" 
                          Margin="25,0,0,3" Foreground="Black"/>
                <TextBlock Text="2. IsPressed - меняет цвет, foreground и масштаб" 
                          Margin="25,0,0,3" Foreground="Black"/>
                <TextBlock Text="3. IsEnabled - серый цвет при отключении" 
                          Margin="25,0,0,15" Foreground="Black"/>

                <!-- Демонстрационные кнопки -->
                <Button Content="Тестовая кнопка (активная)" 
                       Style="{StaticResource DemoButtonStyle}"
                       Height="45"/>

                <Button Content="Тестовая кнопка (отключенная)" 
                       Style="{StaticResource DemoButtonStyle}"
                       Height="45" IsEnabled="False"
                       Margin="0,15,0,0"/>

                <TextBlock Text="Правило приоритета:" 
                          FontSize="17" FontWeight="SemiBold" 
                          Margin="0,25,0,12"
                          Foreground="#2C3E50"/>

                <Border Background="#EBF5FB" Padding="15" CornerRadius="8">
                    <TextBlock Text="При срабатывании нескольких триггеров одновременно, приоритет имеют триггеры, расположенные ПОСЛЕ в XAML-коде (ниже в разметке)." 
                              TextWrapping="Wrap" Margin="0,0,0,0"
                              Foreground="#2874A6"/>
                </Border>

                <TextBlock Text="В данном случае, если кнопка нажата (IsPressed) и на нее наведен курсор (IsMouseOver), сработают оба триггера, но свойства из триггера IsPressed (который расположен после) будут иметь приоритет для общих свойств (Background, Foreground)." 
                          TextWrapping="Wrap" Margin="0,15,0,0"
                          Foreground="#566573"/>

                <Border Background="#FDEDEC" Padding="12" CornerRadius="6" Margin="0,15,0,0">
                    <TextBlock Text="Проверьте это поведение, наведя курсор на кнопку и нажав на нее!" 
                              FontWeight="SemiBold" Foreground="#C0392B"
                              TextWrapping="Wrap" TextAlignment="Center"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки навигации -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Center" Margin="15" Background="#FFBBCFE4">
            <Button Content="Назад" Click="GoBack" 
                   Width="110" Margin="8"
                   Background="#FF406280"
                   Foreground="White"/>
            <Button Content="Выход" Click="ExitApp" 
                   Width="110" Margin="8"
                   Background="#FFAE5046"
                   Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>