<Window x:Class="_10Lab.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1 - ViewBox и Canvas" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Сравнение ViewBox и Canvas" 
                  FontSize="18" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="10"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - с ViewBox -->
            <StackPanel Grid.Column="0" Margin="5">
                <TextBlock Text="С ViewBox (масштабируется)" 
                          FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Border BorderBrush="Black" BorderThickness="2" Padding="5">
                    <Viewbox>
                        <Canvas Margin="10" Width="310" Height="310" Background="LightYellow">
                            <!-- Координатные оси -->
                            <Line Stroke="Black" StrokeThickness="5" X1="0" Y1="0" X2="0" Y2="300" 
                                  StrokeEndLineCap="Round"/>
                            <Line Stroke="Black" StrokeThickness="5" X1="0" Y1="300" X2="300" Y2="300" 
                                  StrokeEndLineCap="Round"/>

                            <!-- График ломаной линии -->
                            <Polyline Stroke="DarkBlue" StrokeThickness="3" 
                                     Points="10,250 20,100 50,250 100,50 200,100 300,100" 
                                     StrokeLineJoin="Round"/>

                            <!-- Эллипс -->
                            <Ellipse Width="50" Height="30" Fill="Red" 
                                    Canvas.Top="40" Canvas.Left="75" Opacity="0.4"/>

                            <!-- Прямоугольник -->
                            <Rectangle Width="40" Height="60" Fill="Green" Opacity="0.6"
                                      Canvas.Top="150" Canvas.Left="200"/>
                        </Canvas>
                    </Viewbox>
                </Border>
                <TextBlock Text="Изменяйте размер окна чтобы увидеть масштабирование" 
                          FontStyle="Italic" TextWrapping="Wrap" Margin="0,10"/>
            </StackPanel>

            <!-- Правая часть - без ViewBox -->
            <StackPanel Grid.Column="1" Margin="5">
                <TextBlock Text="Без ViewBox (фиксированный размер)" 
                          FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Border BorderBrush="Black" BorderThickness="2" Padding="5">
                    <Canvas Margin="10" Width="310" Height="310" Background="LightGreen">
                        <!-- Координатные оси -->
                        <Line Stroke="Black" StrokeThickness="5" X1="0" Y1="0" X2="0" Y2="300" 
                              StrokeEndLineCap="Round"/>
                        <Line Stroke="Black" StrokeThickness="5" X1="0" Y1="300" X2="300" Y2="300" 
                              StrokeEndLineCap="Round"/>

                        <!-- График ломаной линии -->
                        <Polyline Stroke="DarkRed" StrokeThickness="3" 
                                 Points="10,250 20,100 50,250 100,50 200,100 300,100" 
                                 StrokeLineJoin="Round"/>

                        <!-- Эллипс -->
                        <Ellipse Width="50" Height="30" Fill="Blue" 
                                Canvas.Top="40" Canvas.Left="75" Opacity="0.4"/>

                        <!-- Прямоугольник -->
                        <Rectangle Width="40" Height="60" Fill="Orange" Opacity="0.6"
                                  Canvas.Top="150" Canvas.Left="200"/>
                    </Canvas>
                </Border>
                <TextBlock Text="Фигуры сохраняют фиксированный размер при изменении окна" 
                          FontStyle="Italic" TextWrapping="Wrap" Margin="0,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>