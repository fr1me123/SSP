<Window x:Class="_8LAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа №8 - Трансформации" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1a1a2e" Offset="0"/>
            <GradientStop Color="#16213e" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Лабораторная работа №8" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>

            <Button x:Name="Task1Button" 
                    Content="Задание 1 - Масштабирование Пульсара" 
                    Width="300" 
                    Height="40" 
                    Margin="0,10" 
                    FontSize="14"
                    Click="Task1Button_Click"/>

            <Button x:Name="Task2Button" 
                    Content="Задание 2 - Текстовый редактор" 
                    Width="300" 
                    Height="40" 
                    Margin="0,10" 
                    FontSize="14"
                    Click="Task2Button_Click"/>

            <Button x:Name="ExitButton" 
                    Content="Выход" 
                    Width="150" 
                    Height="35" 
                    Margin="0,30,0,0" 
                    FontSize="14"
                    Background="#e94560"
                    Foreground="White"
                    Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>